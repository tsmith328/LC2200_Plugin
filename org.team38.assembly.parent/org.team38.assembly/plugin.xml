<?xml version="1.0" encoding="windows-1252"?>
<?eclipse version="3.0"?>
<plugin>
	<extension point="org.eclipse.emf.ecore.generated_package">
		<package 
			uri = "http://www.team38.org/assembly/LC2200"
			class = "org.team38.assembly.lC2200.LC2200Package"
			genModel = "model/generated/LC2200.genmodel" />
	</extension>
	<extension
	      id="product"
	      point="org.eclipse.core.runtime.products">
	   <product
	         application="org.eclipse.ui.ide.workbench"
	         name="LC-2200 IDE">
	      <property
	            name="appName"
	            value="LC-2200 IDE">
	      </property>
	   </product>
	</extension>
 <extension
       point="org.eclipse.ui.newWizards">
    <category
          id="org.team38.assembly.wizards"
          name="LC-2200">
    </category>
    <wizard
          category="org.team38.assembly.wizards"
          class="org.team38.assembly.wizards.LC2200ProjectNewWizard"
          finalPerspective="org.team38.assembly.lc2200perspective"
          id="org.team38.assembly.wizard.new.lc2200"
          name="LC-2200 Project"
          project="true">
          <description>Create a new LC-2200 Project.</description>
    </wizard>
    <wizard
          category="org.team38.assembly.wizards"
          class="org.team38.assembly.wizards.LC2200FileNewWizard"
          id="org.team38.assembly.wizard.new.lc2200file"
          name="LC-2200 File">
    </wizard>
 </extension>
 <extension
       point="org.eclipse.ui.perspectives">
    <perspective
          class="org.team38.assembly.perspectives.Perspective"
          id="org.team38.assembly.lc2200perspective"
          name="LC-2200">
    </perspective>
 </extension>
 <extension
       point="org.eclipse.ui.perspectiveExtensions">
    <perspectiveExtension
          targetID="org.team38.assembly.lc2200perspective">
       <view
             id="org.team38.assembly.navigator"
             minimized="false"
             ratio="0.25"
             relationship="left"
             relative="org.eclipse.ui.editorss">
       </view>
       <view
             id="org.team38.assembly.assembledview"
             minimized="false"
             relationship="right"
             relative="org.eclipse.ui.editorss">
       </view>
       <newWizardShortcut
             id="org.team38.assembly.wizard.new.lc2200">
       </newWizardShortcut>
       <newWizardShortcut
             id="org.team38.assembly.wizard.new.lc2200file">
       </newWizardShortcut>
    </perspectiveExtension>
    <perspectiveExtension
          targetID="org.eclipse.ui.resourcePerspective">
       <view
             id="org.team38.assembly.navigator"
             ratio="0.5"
             relationship="stack"
             relative="org.eclipse.ui.navigator.ProjectExplorer">
       </view>
    </perspectiveExtension>
 </extension>
 <extension
       point="org.eclipse.ui.views">
    <view
          class="org.eclipse.ui.navigator.CommonNavigator"
          icon="icons/sample.gif"
          id="org.team38.assembly.navigator"
          name="LC-2200">
    </view>
    <view
          class="org.team38.assembly.AssembledView"
          id="org.team38.assembly.assembledview"
          name="Assembled Code"
          restorable="true">
    </view>
 </extension>
 <extension
       point="org.eclipse.ui.navigator.viewer">
    <viewerActionBinding
          viewerId="org.team38.assembly.navigator">
       <includes>
          <actionExtension
                pattern="org.eclipse.ui.navigator.resources.*">
          </actionExtension>
       </includes>
    </viewerActionBinding>
    <viewerContentBinding
          viewerId="org.team38.assembly.navigator">
       <includes>
          <contentExtension
                pattern="org.eclipse.ui.navigator.resourceContent">
          </contentExtension>
          <contentExtension
                pattern="org.eclipse.ui.navigator.resources.filters.*">
          </contentExtension>
          <contentExtension
                pattern="org.eclipse.ui.navigator.resources.linkHelper">
          </contentExtension>
          <contentExtension
                pattern="org.eclipse.ui.navigator.resources.workingSets">
          </contentExtension>
       </includes>
    </viewerContentBinding>
 </extension>
</plugin>
